<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create" method="POST">
        <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none" type="text" name="title"
          placeholder="Title goes here.." />
        <textarea class="mt-2 px-5 py-2 resize-none block bg-zinc-800 w-full rounded-md outline-none" name="details"
          placeholder="Write your task details here..."></textarea>
        <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task" />
      </form>
    </div>

    <div class="tasks flex gap-3 flex-wrap p-10">
      <% if (files && files.length > 0) { %>
        <% files.forEach(function (value) { %>
          <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter"><%= value %></h1>
          <div class="w-full mt-3 flex items-center justify-between">
            <a class="text-blue-500 inline-block" href="/file/<%= value %>">Read More...</a>
            <a class="text-zinc-600" href="/edit/<%= value %>">edit filename</a>
          </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-600">No tasks yet.</h3>
      <% } %>
    </div>
  </div>
</body>

</html>
