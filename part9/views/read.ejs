<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>

    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <a class="text-blue-500" href="/">back to home</a>

      <h1 class="text-3xl tracking-tighter mb-8 mt-10">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length >  0){ %>
        <% users.forEach(function(user) { %>
        <div class="user w-80 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex items-center gap-4 mt-10">
            <a class="text-zinc-200 text-sm" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500 text-sm" href="/delete/<%= user.id %>">Delete User</a>
          </div>
        </div>
        <% }) %>
        <% } else { %>
        <h3 class="text-zinc-500">no users yet</h3>
        <% } %>
      </div>
    </div>

  </body>
</html>
